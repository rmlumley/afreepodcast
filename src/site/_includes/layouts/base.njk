<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    {% if title !== 'A Free Podcast' %}
      <title>{{ title }} | A Free Podcast</title>
    {% else %}
      <title>{{ title }}</title>
    {% endif %}
    {% if image %}
      <meta name="og:image" content="https://afreepodcast.com/images/{{image}}-thumb.jpg">
    {% else %}
      <meta name="og:image" content="https://afreepodcast.com/images/social-thumb.jpg">
    {% endif %}
    <meta name="Description" content="{{ subtitle }}">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <script rel="preconnect" async src="https://www.googletagmanager.com/gtag/js?id=UA-4817551-8"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-4817551-8');
    </script>
  </head>
  <body {% if bodyClass %}class="{{ bodyClass }}"{% endif %}>

    <div class="container">
      {% include "header.njk" %}
      {{ content | safe }}
      {% include "footer.njk" %}
    </div>

    {% set js %}
      {% include "js/core.js" %}
    {% endset %}
    <script>{{ js | jsmin | safe }}</script>

  </body>
</html>



